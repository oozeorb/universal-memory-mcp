# Universal Memory MCP Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Memory Storage Configuration  
MEMORY_STORAGE_TYPE=sqlite
MEMORY_STORAGE_PATH=~/universal-memories.db

# Processing Configuration
AUTO_EXTRACT=true
DEDUPLICATION=true
MAX_MEMORIES_PER_QUERY=10
SIMILARITY_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=~/universal-memory-mcp.log

# Optional: Override config file location
# CONFIG_PATH=~/custom-config.json